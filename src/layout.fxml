<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane fx:id="content" fx:controller="Controller" xmlns:fx="http://javafx.com/fxml" onKeyPressed="#keyListener">

    <top>
        <HBox fx:id="header" spacing="10" alignment="CENTER">
            <padding><Insets top="5" right="0" bottom="5" left="0"/></padding>
            <Button fx:id="button1" text="Play" onAction="#play" focusTraversable="false"/>
            <Button fx:id="button2" text="Pause" onAction="#pause" focusTraversable="false"/>
            <Button fx:id="button3" text="Reset" onAction="#reset" focusTraversable="false"/>
            <Button fx:id="button4" text="Step" onAction="#oneStep" focusTraversable="false"/>
            <Button fx:id="button5" text="Move head" onAction="#moveHead" focusTraversable="false"/>
        </HBox>
    </top>

    <left>
    </left>

    <center>
        <StackPane fx:id="mainContainer" focusTraversable="true">

        </StackPane>
    </center>

    <right>
    </right>

    <bottom>
    </bottom>

</BorderPane>